<!DOCTYPE html>
<html>
<head>
  <title>Tixstr</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <!-- topbar -->
<!--   <div class="row">
    <div class="twelve columns" id="topbar"> -->
      <nav class="top-bar">
        <ul>
          <!-- Title Area -->
          <li class="name">
            <h1><a href="/">Tixstr</a></h1>
          </li>
          <li class="toggle-topbar"><a href="#"></a></li>
        </ul>

        <section>
          <!-- Left Nav Section -->
          <ul class="left">
            <li class="divider"></li>
            <li class="has-dropdown">
              <%= link_to("Movies", movies_path) %>
              <ul class="dropdown">
                <% Movie.all.each do |movie|%>
                  <li><a href="#"><%= link_to(movie.title, movie_path(movie.id)) %></a></li>
                <% end %>
              </ul>
            </li>
            <li class="divider hide-for-small"></li>
            <li class="has-dropdown">
              <%= link_to("Theaters", theaters_path) %>
              <ul class="dropdown">
                <% Theater.all.each do |theater|%>
                  <li><%= link_to(theater.name, theater_path(theater.id)) %></a></li>
                <% end %>
              </ul>
            </li>
            <li class="divider hide-for-small"></li>
          </ul>

          <!-- Right Nav Section -->
          <ul class="right">
            <li class="divider show-for-medium-and-up"></li>
            <%== intellinav %>
          </ul>
        </section>
      </nav>
<!--     </div>
  </div> -->
  <!-- end topbar -->

  <div id="body">
    <%= yield %>
  </div>



  <!-- Footer -->

  <footer class="row">
    <div class="twelve columns">
      <hr />
      <div class="row">
        <div class="six columns">
          <p>&copy; Copyright no one at all. Go to town.</p>
        </div>
        <div class="six columns">
          <ul class="link-list right">
            <li><a href="#">Link 1</a></li>
            <li><a href="#">Link 2</a></li>
            <li><a href="#">Link 3</a></li>
            <li><a href="#">Link 4</a></li>
            <li><a href="#">Link 5</a></li>
            <li><a href="#">Link 6</a></li>
            <li><a href="#">Link 7</a></li>
          </ul>
        </div>
      </div>
    </div>
  </footer>

</body>
</html>

